<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/local_item_background"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp">

    <TextView
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:id="@+id/dayMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="32°"/>
    <TextView
        android:id="@+id/slash"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/dayMax"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="@id/dayMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"/>

    <TextView
        android:id="@+id/dayMin"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="@id/slash"
        app:layout_constraintLeft_toRightOf="@id/slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="22°"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        app:layout_constraintLeft_toRightOf="@id/dayMin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey"/>

</androidx.constraintlayout.widget.ConstraintLayout>